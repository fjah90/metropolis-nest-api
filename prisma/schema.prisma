// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model bills {
  id         Int      @id @unique @default(autoincrement())
  pdf_name   String   @unique
  xml_name   String   @unique
  pdf_url    String
  xml_url    String
  is_deleted Boolean  @default(false)
  created_at DateTime @default(now())
  update_at  DateTime @updatedAt

  // Relaci칩n con el modelo users
  userId     Int      // Clave for치nea para relacionar con users
  user       users    @relation(fields: [userId], references: [id]) // Define la relaci칩n
}

model users {
  id         Int      @id @unique @default(autoincrement())
  username   String
  email      String   @unique
  password   String
  is_deleted Boolean  @default(false)
  rolId      Int
  rol        Rols     @relation(fields: [rolId], references: [id])
  created_at DateTime @default(now())
  update_at  DateTime @updatedAt

  // Relaci칩n inversa: Un usuario puede tener muchas facturas
  bills      bills[]  // Lista de facturas asociadas al usuario
}

model Rols {
  id         Int      @id @unique @default(autoincrement())
  name       String   @unique
  users      users[]
  created_at DateTime @default(now())
  update_at  DateTime @updatedAt
}